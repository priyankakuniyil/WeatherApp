<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_recent"
        android:layout_width="@dimen/box_height"
        android:layout_height="@dimen/box_height"
        android:layout_above="@+id/tv_recent_search"
        android:layout_centerHorizontal="true"
        android:tint="@android:color/darker_gray"
        app:srcCompat="@drawable/recent_search" />

    <TextView
        android:id="@+id/tv_recent_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/margin_top"
        android:fontFamily="@font/helveticaneuelight"
        android:text="@string/recent_search"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/small" />
</RelativeLayout>
